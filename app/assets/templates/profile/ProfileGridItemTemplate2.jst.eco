<div class="gridItem">
	<%if @.image_name_selection:%>
		<div class="gridItemPicture" style="background-image:url('<%=@.image_name_selection.url%>');">
	<%else:%>
		<div class="gridItemPicture" style="background-image:url('<%=@.image_name.url%>');">
	<%end%>
	
		
	</div>
	<span class="gridItemDescription">
		<%if @.title: %>
			<%=@.title%>
		<%else:%>
			<%= @.name%></span>
		<% end %>
</div>