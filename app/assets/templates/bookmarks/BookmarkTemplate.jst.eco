	float:left;
	height:100%;
	padding:10px;
	color:#333333;
}
.my_bookmarks_top{
	padding:20px 20px 0px;
	border-bottom:1px solid #ebebeb;
	font-size:18px;

}
.bookmarks_close_button{
	position:absolute;
	top:15px;
	right:15px;
}
