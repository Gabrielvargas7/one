<style>
.bookmark_view{
	position:absolute;
	border:1px solid red;
	color:white;
	height:95%;
	z-index:4;
}
.bookmark_menu{
	width:240px;
	background-color: rgba(0,0,0,.8);
	height:100%;
	padding:10px;
	float:left;
}
.bottom_border_padding{
	padding-bottom:10px;
	border-bottom:1px solid #707070;
}
.bookmark_object_title{
	font-size: 24px;
	font-weight: lighter;

	line-height: 26px;
}
ul.bookmark_menu_list {
	margin:0;
