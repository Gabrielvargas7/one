<h1>Listing static_contents</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Image name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @static_contents.each do |static_content| %>
  <tr>
    <td><%= static_content.name %></td>
    <td><%= static_content.image_name %></td>
    <td><%= static_content.description %></td>
    <td><%= link_to 'Show', static_content %></td>
    <td><%= link_to 'Edit', edit_static_content_path(static_content) %></td>
    <td><%= link_to 'Destroy', static_content, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

