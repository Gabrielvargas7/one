<h1>Listing notifications</h1>

<h3>
  <%= link_to 'New Notification', new_notification_path %>  </br>
</h3>




<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Image name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @notifications.each do |notification| %>
  <tr>
    <td><%= notification.name %></td>
    <td><%= notification.user_id %></td>
    <td>

      <% if notification.image_name.blank?  %>
          <%= cl_image_tag "default_image_all.png",width:100 , height:100,:crop => :fit,:default_image => "default_image_all.png" %>
      <% else %>
          <%= cl_image_tag notification.image_name,width:100 , height:100,:crop => :fit,:default_image => "default_image_all.png" %>
      <% end %>

    </td>
    <td><%= link_to 'Show', notification %></td>
    <td><%= link_to 'Edit', edit_notification_path(notification) %></td>
  </tr>
<% end %>
</table>

<br />


