<h1>Listing items_designs</h1>


<% @items.each do |item| %>
    <%= link_to item.name, items_designs_path(item_id:item.id), :method => :get %>
<% end %>


<h3>
  <%= link_to 'New Items design', new_items_design_path %>
</h3>


<%= will_paginate %>

<table class="table table-bordered">
  <tr>
    <th>Id</th>
    <th>Name</th>
    <th>Description</th>
    <th>Item_Design Image</th>

    <th>Company Name ID</th>

    <th>Company Name</th>
    <th>Company Image Logo</th>

    <th>Item id</th>
    <th>Item Name</th>
    <th>Item Image</th>

    <th>Category</th>
    <th>Style</th>
    <th>Brand</th>
    <th>Color</th>
    <th>Make</th>
    <th>Special Name</th>
    <th>Like</th>
    <th>Price</th>
    <th>product_url</th>



    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items_designs.each do |items_design| %>
  <tr>
    <td><%= items_design.id %></td>
    <td><%= items_design.name %></td>
    <td><%= items_design.description %></td>
    <td>

      <% if items_design.image_name.blank?  %>
          <%= cl_image_tag "default_image_all.png",width:100 , height:100,:crop => :fit,:default_image => "default_image_all.png" %>
      <% else %>
          <%= cl_image_tag items_design.image_name,width:100 , height:100,:crop => :fit,:default_image => "default_image_all.png" %>
      <% end %>


    </td>

    <%  if items_design.company.nil? %>
        <td></td>
        <td></td>
        <td></td>

  <%  else %>
        <td><%= items_design.company_id %></td>
        <td><%= items_design.company.name %></td>
        <td>
          <% if items_design.company.image_name.blank?  %>
              <%= cl_image_tag "default_image_all.png",width:50 , height:50,:crop => :fit,:default_image => "default_image_all.png" %>
          <% else %>
              <%= cl_image_tag items_design.company.image_name,width:50 , height:50,:crop => :fit,:default_image => "default_image_all.png" %>
          <% end %>

        </td>
  <%  end %>


        <%  if items_design.item.nil? %>
        <td></td>
        <td></td>
        <td></td>

    <%  else %>
        <td><%= items_design.item_id %></td>
        <td><%= items_design.item.name %></td>
        <td>
          <% if items_design.item.image_name.blank?  %>
              <%= cl_image_tag "default_image_all.png",width:50 , height:50,:crop => :fit,:default_image => "default_image_all.png" %>
          <% else %>
              <%= cl_image_tag items_design.item.image_name,width:50 , height:50,:crop => :fit,:default_image => "default_image_all.png" %>
          <% end %>


        </td>

    <%  end %>
    <td><%= items_design.category %></td>
    <td><%= items_design.style %></td>
    <td><%= items_design.brand %></td>
    <td><%= items_design.color %></td>
    <td><%= items_design.make %></td>
    <td><%= items_design.special_name %></td>
    <td><%= items_design.like %></td>
    <td><%= items_design.price %></td>
    <td><%= items_design.product_url %></td>




    <td><%= link_to 'Show', items_design %></td>
    <td><%= link_to 'Edit', edit_items_design_path(items_design) %></td>

  </tr>
<% end %>
</table>

<%= will_paginate %>

