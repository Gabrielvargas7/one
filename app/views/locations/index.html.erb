<h1>Listing locations</h1>

<table border="3" bordercolor="#c86260" bgcolor="#ffffcc" width="50%" cellspacing="2" cellpadding="3">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>X</th>
    <th>Y</th>
    <th>Z</th>
    <th>Width</th>
    <th>Height</th>
    <th>Section id</th>
    <th>Section name</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%= location.name %></td>
    <td><%= location.description %></td>
    <td><%= location.x %></td>
    <td><%= location.y %></td>
    <td><%= location.z %></td>
    <td><%= location.width %></td>
    <td><%= location.height %></td>

    <%  if location.section.nil? %>
        <td></td>
        <td></td>

    <%  else %>
        <td><%= location.section.id  %></td>
        <td><%= location.section.name  %></td>

    <%  end %>




    <td><%= link_to 'Show', location %></td>
    <td><%= link_to 'Edit', edit_location_path(location) %></td>
    <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

