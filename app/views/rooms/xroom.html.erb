<% provide(:title, 'Select a room design') %>

<% content_for :head do %>
    <!-- your tags -->
    <meta name="description" content="Select a room you would like to use to start discovering the web from.">

    <!-- Facebook Conversion Code for select a room -->
    <script type="text/javascript">
      var fb_param = {};
      fb_param.pixel_id = '6015427155638';
      fb_param.value = '0.00';
      fb_param.currency = 'USD';
      (function(){
        var fpw = document.createElement('script');
        fpw.async = true;
        fpw.src = '//connect.facebook.net/en_US/fp.js';
        var ref = document.getElementsByTagName('script')[0];
        ref.parentNode.insertBefore(fpw, ref);
      })();
    </script>
    <noscript>
      <img height="1" width="1" alt="" style="display:none" src="https://www.facebook.com/offsite_event.php?id=6015427155638&amp;value=0&amp;currency=USD" />
    </noscript>

<% end %>



<div id="xroom_entire_room_container">
    <header class="navbar navbar-fixed-top navbar-inverse" >
        <div class="navbar-inner" >


            <% if @static_content_logo.nil? or @static_content_logo.image_name.blank?   %>
            <% else %>
                <%= link_to cl_image_tag(@static_content_logo.image_name, :width => 112, :height => 32, :alt => "my web room logo" ), root_path , class:"brand",id:  "xroom_logo"  %>
            <% end %>

          <ul class="nav pull-right" >
            <li> <%= link_to_function "Login", "javascript:Mywebroom.Helpers.LightboxHelper.login_lightbox_show()",:class => "gray_button_light gray_button", :id => "login_btn"%></li>
          </ul>

        </div>
    </header>

        <div>

            <div id="xroom_entire_room_background">
                <% if @bundle.theme.image_name.blank?  %>
                <% else %>
                    <%= cl_image_tag @bundle.image_name_entire_room , :default_image => "default_image_all.png", :alt => "enrire room"  %>
                <% end %>
            </div>
            <div id="xroom_entire_room_left" style="background-image: url('<%= @arrows_image %>')" >
              <%= link_to "", xroom_rooms_path(bundle_id:@bundle.id,moving_toward:'prev'), :method => :get, class:'xroom_entire_room_right_fill-div' %>
            </div>

            <div id="xroom_entire_room_right" style="background-image: url('<%= @arrows_image %>')" >
              <%= link_to "", xroom_rooms_path(bundle_id:@bundle.id,moving_toward:'next'), :method => :get, class:'xroom_entire_room_right_fill-div' %>
            </div>


          <div id="xroom_entire_room_btn">
            <%= link_to_function "Click here to use this Room", "javascript:Mywebroom.Helpers.LightboxHelper.signup_lightbox_show()",:class => "blue_button blue_button_light", :id => "xroom_entire_room_btn_blue"%>
          </div>


        </div>
</div>

