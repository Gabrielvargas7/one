<h1>Listing items_locations</h1>

<table border="3" bordercolor="#c86260" bgcolor="#ffffcc" width="50%" cellspacing="2" cellpadding="3">
  <tr>
    <th>Item id</th>
    <th>Item name</th>

    <th>Location id</th>
    <th>Location name</th>

    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items_locations.each do |items_location| %>
  <tr>

    <%  if items_location.item.nil? %>
        <td></td>
        <td></td>

    <%  else %>
        <td><%= items_location.item.id  %></td>
        <td><%= items_location.item.name  %></td>
    <%  end %>


    <%  if items_location.location.nil? %>
        <td></td>
        <td></td>

    <%  else %>
        <td><%= items_location.location.id  %></td>
        <td><%= items_location.location.name  %></td>
    <%  end %>


    <td><%= link_to 'Show', items_location %></td>
    <td><%= link_to 'Edit', edit_items_location_path(items_location) %></td>
    <td><%= link_to 'Destroy', items_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

