<h1>Listing sections</h1>

<h3>
  <%= link_to 'New Section', new_section_path %>
</h3>
<table border="3" bordercolor="#c86260" bgcolor="#ffffcc" width="50%" cellspacing="2" cellpadding="3">
  <tr>
    <th>Section Id</th>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>

  </tr>

<% @sections.each do |section| %>
  <tr>

    <td><%= section.id %></td>
    <td><%= section.name %></td>
    <td><%= section.description %></td>
    <td><%= link_to 'Show', section %></td>
    <td><%= link_to 'Edit', edit_section_path(section) %></td>
  </tr>
<% end %>
</table>

<br />


