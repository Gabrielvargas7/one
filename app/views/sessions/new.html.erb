


<% provide(:title, "Login") %>
<div class="session_container">


  <div class="session_container_main">

        <p id="session_login_text">Login</p>

        <%= link_to cl_image_tag("facebook-btn.png" , width: 360,height:52,:crop => :fit,:default_image => "default_image_all.png") , "/auth/facebook", id: "session_facebook_btn" %>

        <p id="session_or_text">OR</p>


        <%= form_for(:session, url: sessions_path) do |f| %>

          <div class="field">
             <%= f.text_field :email , :placeholder => "Email" , :id => "session_email_box"%>
          </div>
          <div class="field">
             <%= f.password_field :password , :placeholder => "Password", :id => "session_password_box"%>
          </div>
          <div class="actions">
             <%= f.submit "Login", class: "btn btn-primary" %>
          </div>
        <% end %>
        <p><%= link_to "forgotten password?", new_password_reset_path %></p>

        <!-- //NOTE: Problems with the JS login
            <%= link_to "Sign in with Facebook", "/auth/facebook" , id: "sign_in" %>

        -->

        <%= link_to "Sign in with Facebook", "/auth/facebook"  %>


    </div>

</div>