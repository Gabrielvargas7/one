<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f|  %>

        <%= render 'shared/error_messages' %>

        <%= f.label :name  %>
        <%= f.text_field :name %>

        <%= f.label :image_name %><br />
        <%= f.file_field :image_name %>





        <%= f.submit "Save changes",class: "btn btn-large btn-primary" %>
  <% end %>

  </div>
</div>