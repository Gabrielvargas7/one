<h1>Listing companies</h1>

<%= link_to 'New Company', new_company_path %>
<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>Image name</th>
    <th>Description</th>
    <th></th>
    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>
    <td><%= company.name %></td>
    <td>
      <% if company.image_name.blank?  %>
          <%= cl_image_tag "default_image_all.png",width:100 , height:100,:crop => :fit,:default_image => "default_image_all.png" %>
      <% else %>
          <%= cl_image_tag company.image_name,width:100 , height:100,:crop => :fit,:default_image => "default_image_all.png" %>
      <% end %>

    </td>


    <td><%= company.description %></td>


    <td><%= link_to 'Show', company %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
  </tr>
<% end %>
</table>

<br />


