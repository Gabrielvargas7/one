<div class="shop_container">
  <%= render 'shop_nav' %>
  <div class="shop_table">
      <table>
          <% if @item_length > 0 %>
          <% @items.in_groups_of(@item_length,false).each do |item_groups| %>
              <tr>
                <% item_groups.each do |item| %>
                <td >
                    <%= link_to image_tag(item.image_name.url().to_s, width: 200,height:200 ),  shop_show_item_path(item.id,get_clean_name(item.name)), :method => :get %>
                    </br><%= item.name[0,15] %>

                </td>
                <% end %>
              </tr>
          <% end %>
         <% end %>
        </table>
  </div>

</div>


<br />


