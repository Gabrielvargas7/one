<div class="shop_container">
  <%= render 'shop_nav' %>
  <div class="shop_left">
    <p>
      <%= image_tag @theme.image_name_selection.url.to_s , width: 300,height:300 %>
    </p>
  </div>
  <div class="shop_right">
    <br/>
    <br/>
    <br/>
    <h4>
      <%= @theme.name %>
    </h4>
    <p>
      <%= @theme.description %>
    </p>
  </div>
</div>



<div class="shop_container">
  <div class="shop_table">
    <table>
      <% if @theme_length > 0 %>
          <% @themes_rand.in_groups_of(@theme_length,false).each do |theme_groups| %>
              <tr>
                <% theme_groups.each do |theme| %>
                    <td >
                      <%= link_to image_tag(theme.image_name_selection.url().to_s,:width => 200, :height => 200),
                                  shop_show_theme_path(theme.id,get_clean_name(theme.name)), :method => :get %>
                      </br><%= theme.name[0,15] %>
                    </td>
                <% end %>
              </tr>
          <% end %>
      <% end %>
    </table>
  </div>

</div>
