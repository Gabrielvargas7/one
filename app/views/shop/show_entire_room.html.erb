<% provide(:title, 'Try this room design in your room') %>

<% content_for :head do %>
    <!-- your tags -->
    <meta name="description" content="Choose a new look for your webroom profile.">
<% end %>



<div class="shop_container">
  <%= render 'shop_nav' %>

  <!--<div class="shop_upper_container" data-shop-type="<%= @entity_type %>">-->
    <!--<%= link_to "Let me see it in my room", shop_forward_to_u_room_path(came_from:@came_from,entity_type:@entity_type,entity_id:@bundle.id),:class => "blue_button blue_button_light"%>-->
    <!--<a href="#" class="shop_fb_btn"><img src="//res.cloudinary.com/hpdnx5ayv/image/upload/h_20/v1389392328/https_s3_amazonaws_com_uploads_hipchat_com_67661_476016_gFHD0W4tGfwpCoK_facebook-share-button_tjbpum.png"></a>-->
    <!--<a href="#" class="shop_pinterest_btn"><img src="//assets.pinterest.com/images/pidgets/pin_it_button.png"></a>-->
    <!---->
  <!--</div>-->

  <div class="shop_container_box">

      <div class="shop_left">
        <div class="shop_upper_container" data-shop-type="<%= @entity_type %>">
          <%= link_to "Let me see it in my room", shop_forward_to_u_room_path(came_from:@came_from,entity_type:@entity_type,entity_id:@bundle.id),:class => "blue_button blue_button_light"%>
          <a href="#" class="shop_fb_btn"><img src="//res.cloudinary.com/hpdnx5ayv/image/upload/h_20/v1389392328/https_s3_amazonaws_com_uploads_hipchat_com_67661_476016_gFHD0W4tGfwpCoK_facebook-share-button_tjbpum.png"></a>
          <a href="#" class="shop_pinterest_btn"><img src="//assets.pinterest.com/images/pidgets/pin_it_button.png"></a>

        </div>

        <p  class="shop_main_image_name">
          <% if @bundle.image_name_set.blank?  %>
              <%= cl_image_tag("default_image_all.png", width: 400,height:400,:crop => :fit,:default_image => "default_image_all.png", :class =>"shop_image_name" )%>
          <% else %>
              <%= cl_image_tag(@bundle.image_name_set , width: 400,height:400,:crop => :fit,:default_image => "default_image_all.png", :class =>"shop_image_name" ) %>
          <% end%>
        </p>
      </div>
      <div class="shop_right">
        <br/>
        <br/>
        <br/>
        <p class="shop_name">
          <%= @bundle.name %>
        </p>
        <p>
          <b><%= @bundle.brand.titlecase unless @bundle.brand.nil? %></b>
        </p>
        <p class="shop_description">
          <%= @bundle.description %>
        </p>
      </div>
  </div>
</div>
<div class="clear"></div>
<br/>




<div class="shop_container">
  <div class="shop_related_items">
    Related Entire Room
  </div>
  <div class="shop_table">
    <table>
      <% if @bundle_length > 0 %>
          <% @bundles_rand.in_groups_of(@bundle_length,false).each do |bundle_groups| %>
              <tr>
                <% bundle_groups.each do |bundle| %>
                    <td >

                      <% if bundle.image_name_set.blank?  %>
                          <%= link_to cl_image_tag("default_image_all.png", width: 200,height:200,:crop => :fit,:default_image => "default_image_all.png"),  shop_show_entire_room_path(bundle.id,get_clean_name(bundle.name)), :method => :get %>
                      <% else %>
                          <%= link_to cl_image_tag(bundle.image_name_set , width: 200,height:200,:crop => :fit,:default_image => "default_image_all.png"), shop_show_entire_room_path(bundle.id,get_clean_name(bundle.name)), :method => :get %>
                      <% end%>


                      </br><%= bundle.name[0,15] %>
                    </td>
                <% end %>
              </tr>
          <% end %>
      <% end %>
    </table>
  </div>

</div>
