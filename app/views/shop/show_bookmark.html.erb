<div class="shop_container">
  <%= render 'shop_nav' %>
  <div class="shop_upper_container" data-shop-type="BOOKMARK">

    <a href="#" class="btn btn-primary shop_let_me_see_on_my_room_btn">Let me see it in my room</a>
    <a href="#" class="shop_fb_btn"><img src="http://res.cloudinary.com/hpdnx5ayv/image/upload/c_fit,h_21,w_36/v1371241692/facebook.png"></a>
    <a href="#" class="shop_pinterest_btn"><img src="//assets.pinterest.com/images/pidgets/pin_it_button.png"></a>

    <br/>
    <br/>
    <br/>
    <br/>
  </div>

  <div class="shop_left">
    <p>
      <%= image_tag @bookmark.image_name_desc.url.to_s , width: 180,height:180,:class =>'shop_image_name'  %>
    </p>
  </div>
  <div class="shop_right">
    <br/>
    <br/>
    <br/>
    <h4 class="shop_name" >
      <%= @bookmark.title %>
    </h4>
    <p class="shop_description">
      <%= @bookmark.description %>
    </p>
  </div>
</div>

<br/>
<br/>
<br/>
<br/>
<br/>

<div class="shop_container">
  <div class="shop_table">
    <table>
      <% if @bookmark_length > 0 %>
          <% @bookmark_rand.in_groups_of(@bookmark_length,false).each do |bookmark_groups| %>
              <tr>
                <% bookmark_groups.each do |bookmark| %>
                    <td >
                      <%= link_to image_tag(bookmark.image_name_desc.url().to_s,:width => 180, :height => 180),
                                  shop_show_bookmark_path(bookmark.id,get_clean_name(bookmark.title)), :method => :get %>
                      </br><%= bookmark.title[0,15] %>
                    </td>
                <% end %>
              </tr>
          <% end %>
      <% end %>
    </table>
  </div>

</div>
