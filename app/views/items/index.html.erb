<h1>Listing items</h1>

<h3>
  <%= link_to 'New Item', new_item_path,  class: "btn btn-primary" %>
</h3>

<table class="table table-bordered">

  <tr>
    <th>Item Id</th>
    <th>Name plural</th>
    <th>Name singular</th>
    <th>Clickable</th>
    <th>Image name </th>
    <th>Image name gray</th>
    <th>Image name first time click</th>

    <th>Priority order</th>

    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>

    <td><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.name_singular %></td>

    <td><%= item.clickable %></td>
    <td>

      <% if item.image_name.blank?  %>
          <%= cl_image_tag "default_image_all.png",width:100 , height:100,:crop => :fit,:default_image => "default_image_all.png" %>
      <% else %>
          <%= cl_image_tag item.image_name,width:100 , height:100,:crop => :fit,:default_image => "default_image_all.png" %>
      <% end %>


    </td>
    <td>
      <% if item.image_name_gray.blank?  %>
          <%= cl_image_tag "default_image_all.png",width:100 , height:100,:crop => :fit,:default_image => "default_image_all.png" %>
      <% else %>
          <%= cl_image_tag item.image_name_gray,width:100 , height:100,:crop => :fit,:default_image => "default_image_all.png" %>
      <% end %>

    </td>
    <td>

      <% if item.image_name_first_time_click.blank?  %>
          <%= cl_image_tag "default_image_all.png",width:100 , height:100,:crop => :fit,:default_image => "default_image_all.png" %>
      <% else %>
          <%= cl_image_tag item.image_name_first_time_click ,width:100 , height:100,:crop => :fit,:default_image => "default_image_all.png" %>
      <% end %>


    </td>
    <td><%= item.priority_order %></td>
    <td><%= link_to 'Show', item  , class: "btn btn-primary" %> </td>
    <td><%= link_to 'Edit', edit_item_path(item), class: "btn btn-primary" %></td>
  </tr>
<% end %>
</table>


<br />


