<h1>Listing items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>X</th>
    <th>Y</th>
    <th>Z</th>
    <th>Width</th>
    <th>Height</th>
    <th>Clickable</th>
    <th>Folder name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.x %></td>
    <td><%= item.y %></td>
    <td><%= item.z %></td>
    <td><%= item.width %></td>
    <td><%= item.height %></td>
    <td><%= item.clickable %></td>
    <td><%= item.folder_name %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

