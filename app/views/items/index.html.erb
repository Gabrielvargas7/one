<h1>Listing items</h1>

<h3>
  <%= link_to 'New Item', new_item_path %>
</h3>


<table border="3" bordercolor="#c86260" bgcolor="#ffffcc" width="50%" cellspacing="2" cellpadding="3">

  <tr>
    <th>Item Id</th>
    <th>Name</th>
    <th>Clickable</th>
    <th>image name</th>
    <th>priority order</th>


    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>

    <td><%= item.id %></td>
    <td><%= item.name %></td>
    <td><%= item.clickable %></td>
    <td><%= image_tag(item.image_name.url().to_s,width: 100, height:100) %></td>
    <td><%= item.priority_order %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
  </tr>
<% end %>
</table>


