<div id="users_photos_container">

  <div class="users_photos_header">
    <h1>MY PHOTOS</h1>
  </div>

  <div class="user_photos_content_wrap2">
    <div class = "user_photos_content_wrap1">

      <div class="user_photos_list_container">
        <div class="user_photos_list">
          <div id="upload_new_photo_button">
            <%= link_to (raw("" +("<span class= 'link_spanner'></span>"))),new_users_photos_by_user_id_path(@photos_user.id),method: :get%>
            <img src="http://res.cloudinary.com/hpdnx5ayv/image/upload/v1383162444/upload_icon.png">Upload New Photo</div>

        
          <% if @photo_length > 0 %>
            <% @users_photos.in_groups_of(@photo_length,false).each do |photo_groups| %>
              
                <% photo_groups.each do |single_photo|%>
                  <div class="users_photo_item">

                    <% if single_photo.image_name.blank? %>
                      <%= cl_image_tag "default-user.png",width:180 , height:180,:crop => :fit,:default_image => "default-user.png" %>
                    
                    <% else %>
                      <%= cl_image_tag single_photo.image_name,width:180 , height:180,:crop => :fit,:default_image => "default-user.png" %>
                    <% end %>
                    <div class="user_photos_menu">
                      <ul class="nav nav-tabs">
                        <li class="dropdown">
                          <a class="dropdown-toggle"
                             data-toggle="dropdown"
                             href="#">
                              <img src="http://res.cloudinary.com/hpdnx5ayv/image/upload/v1383170221/edit-icon.png">
                              
                            </a>
                          <ul class="dropdown-menu">
                            <li>
                              <%= link_to 'Set as Profile Picture', update_users_photos_profile_image_by_user_id_by_users_photo_id_path(single_photo.user_id,single_photo.id), method: :put %>
                            </li>
                            <li>
                              <%= link_to 'Delete',destroy_users_photos_by_user_id_by_users_photo_id_path(single_photo.user_id,single_photo.id), method: :delete %>
                            </li>
                          </ul>
                        </li>
                      </ul>
                    </div>
                  </div>
                <%end%>
              
            <%end%>
          <%end%>
          
          <div class="users_photo_item add_square">
            <%= link_to (raw("" +("<span class= 'link_spanner'></span>"))),new_users_photos_by_user_id_path(@photos_user.id),method: :get%>
            <div>
            <p><span>+</span></p>
            <p>Add</p>
          </div>
          </div>
        </div>
      </div>

      <div class="users_photos_large_view">
        <h2><%if @users_profile_photo.description %>
              <%= @users_profile_photo.description %>
            <%else%>
              (no description)
            <%end%>
        </h2>
        <hr>
        <div>
          <%= cl_image_tag @users_profile_photo.image_name,width:250 , height:250,:crop => :fit,:default_image => "default-user.png" %>
        </div>
        <%= link_to 'Set a profile image', update_users_photos_profile_image_by_user_id_by_users_photo_id_path(@users_profile_photo.user_id, @users_profile_photo.id), method: :put %>
      </div>

    </div>
  </div>

</div>



  <table class="table table-bordered">
  <tr>

    <th>Description</th>
    <th>Image name</th>
    <th>Profile image</th>
    <th></th>
    <th></th>
    <th></th>

  </tr>

  <% @users_photos.each do |users_photo| %>
      <tr>

        <td><%= users_photo.description %></td>
        <td>

          <% if users_photo.image_name.blank?  %>
              <%= cl_image_tag "default-user.png",width:100 , height:100,:crop => :fit,:default_image => "default-user.png" %>
          <% else %>
              <%= cl_image_tag users_photo.image_name,width:100 , height:100,:crop => :fit,:default_image => "default-user.png" %>
          <% end %>


        </td>
        <td><%= users_photo.profile_image %></td>

        <td><%= link_to 'Set a profile image', update_users_photos_profile_image_by_user_id_by_users_photo_id_path(users_photo.user_id,users_photo.id), method: :put %></td>
        <td><%= link_to 'Edit image', edit_users_photos_by_user_id_by_users_photo_id_path(users_photo.user_id,users_photo.id), method: :get %></td>

        <%  if users_photo.profile_image == 'n' %>
            <td><%= link_to 'Delete',destroy_users_photos_by_user_id_by_users_photo_id_path(users_photo.user_id,users_photo.id), method: :delete %></td>
        <%  else  %>
            <td></td>
        <%  end %>


      </tr>
  <% end %>
</table>

<br />

</div>