<div id="users_photos_container">

  <div class="users_photos_header">
    <h1>MY PHOTOS</h1>
  </div>

  <%= link_to 'New Users photo', new_users_photos_by_user_id_path(@photos_user.id),method: :get  %>

  <div class="user_photos_content_wrap2">
    <div class = "user_photos_content_wrap1">

      <div class="gridItemList">
      Photos go here. 
        <p>Add square at the end</p>
      </div>

      <div class="users_photos_large_view">
        <h2>Photo Description</h2>
        <hr>
        <img src="http://placekitten.com/250/250">
        <a href="#"><p>Set as Profile Image</p></a>
      </div>

    </div>
  </div>

</div>



  <table class="table table-bordered">
  <tr>

    <th>Description</th>
    <th>Image name</th>
    <th>Profile image</th>
    <th></th>
    <th></th>
    <th></th>

  </tr>

  <% @users_photos.each do |users_photo| %>
      <tr>

        <td><%= users_photo.description %></td>
        <td>

          <% if users_photo.image_name.blank?  %>
              <%= cl_image_tag "default-user.png",width:100 , height:100,:crop => :fit,:default_image => "default-user.png" %>
          <% else %>
              <%= cl_image_tag users_photo.image_name,width:100 , height:100,:crop => :fit,:default_image => "default-user.png" %>
          <% end %>


        </td>
        <td><%= users_photo.profile_image %></td>

        <td><%= link_to 'Set a profile image', update_users_photos_profile_image_by_user_id_by_users_photo_id_path(users_photo.user_id,users_photo.id), method: :put %></td>
        <td><%= link_to 'Edit image', edit_users_photos_by_user_id_by_users_photo_id_path(users_photo.user_id,users_photo.id), method: :get %></td>

        <%  if users_photo.profile_image == 'n' %>
            <td><%= link_to 'Delete',destroy_users_photos_by_user_id_by_users_photo_id_path(users_photo.user_id,users_photo.id), method: :delete %></td>
        <%  else  %>
            <td></td>
        <%  end %>


      </tr>
  <% end %>
</table>

<br />

</div>